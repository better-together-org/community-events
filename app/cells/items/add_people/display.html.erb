

<%= render_cell "participants/participant_list", :javascript, 
    :caption => "participants",
    :pager => "participants-pager",
    :del => false,
    :edit => false,
    :add => false,
    :invite_status => false,
    :invite_category => true,
    :acceptance_status => true,
    :has_survey => false,
    :reg_type => false,
    
    :pub_first_name => false,
    :pub_last_name => false,
    :pub_suffix => false,
    
    :multiselect => true,
    :showControls => false,
    :selectNotifyMethod => "ItemApp.PeopleManagement.showPerson"
%>
    
<%= render_cell "items/item_list", :javascript, 
    :caption => "prog-items", 
    :pager => "#items-pager",
    :del => false,
    :edit => false,
    :add => false,
    :format_name => false,
    :duration => false,
    :room => false,
    :day => false,
    :time => false,
    :ref_number => false,
    :selectNotifyMethod => "ItemApp.PeopleManagement.showProgrammeItem",
    :showControls => false
%>
    
<%= render_cell "items/add_people", :javascript, :prog_item => @prog_item %>
<%= render_cell "items/add_people", :templates %>

<div class="row">
    <div class="col-xs-4 left-jqgrid" id="participants-list">
        <%= render_cell "participants/participant_list", :display,
                :pager => "participants-pager"
         %>
        <div class="voffset10"></div>
        <div id="people-control-view"></div>
    </div>
    <div class="col-xs-5">
        <div class="row">
            <div class="col-xs-12">
                <div class="well">
                    <div id="program-item-view"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-primary save-button pull-right"><%= t "save-assignments" %></button>
            </div>
        </div>
        <div class="row" id="participants-area">
            <div class="col-xs-12">
                <div>
                    <h5><%= t "moderator(s)" %></h5>
                </div>
                <div class="ui-droppable well" id="moderator-area">
                    <div id="moderators-view"></div>
                </div>

                <div>
                    <h5><%= t "program-participants" %></h5>
                </div>
                <div class="ui-droppable well" id="participant-area">
                    <div id="participants-view"></div>
                </div>

                <div class="understated-drag-person-hint">
                    <p><%= (t 'drag-people-hint').html_safe %></p>
                </div>
                <div>
                    <h5><%= t "reserved" %><i class="glyphicon glyphicon-info-sign bpopover" title="<%= t "reserved" %>" data-container="body" data-trigger="hover" data-placement="top" data-toggle="popover" data-content='<%= (t "reserved-help").html_safe %>'></i></h5>
                </div>
                <div class="ui-droppable well" id="reserve-area">
                    <div id="reserveds-view"></div>
                </div>

                <div>
                    <h5><%= t "invisible" %><i class="glyphicon glyphicon-info-sign bpopover" title="<%= t "invisible" %>" data-container="body" data-trigger="hover" data-placement="top" data-toggle="popover" data-content='<%= (t "invisible-help").html_safe %>'></i></h5>
                </div>
                <div class="ui-droppable well" id="invisible-area">
                    <div id="invisibles-view"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-primary save-button pull-right"><%= t "save-assignments" %></button>
            </div>
        </div>
        <div class="voffset10"></div>
    </div>
    <div class="col-xs-3 right-jqgrid" >
        <%= render_cell "items/item_list", :display %>
    </div>
</div>
