
<script type="text/template" id="mailing-list-layout-template">
    <section>
        <div class="row">
            <h3 class="h3-underlined"><%= t 'mailings' %><a class="mtooltip"><i class="glyphicon glyphicon-info-sign"></i><span><%= t 'hint-mailings' %></span></h3>      
            <div id="mailing-control-div"></div>    
        </div>
        <div class="voffset10"></div>
        <div class="row">
            <div id="mailing-region-div"></div>
        </div>
    </section>
</script>

<script type="text/template" id="mailing-control-template">
    <button class="add-model-button btn btn-primary pull-right">
        <%= t 'add-mailing' %>
    </button>
</script>

<script type="text/template" id="mailing-template">
    <td>
        <a href="#survey-tab" data-toggle="tab" class="model-select-button">{{= mailing_number }} - {{= mail_template }} ({{= mail_use }})</a>
    </td>
    <td align="right">
        {{= date_sent ? moment(date_sent).format('(DD-MMM-YYYY @ hh:MMa)') : ''}}
    </td>
    <td align="right">
        <button class="model-delete-button btn btn-primary btn-xs"><small><i class="glyphicon glyphicon-trash"></i></small></button>
    </td>
</script>

<script type="text/template" id="mailing-template-nodelete">
    <td>
        <a href="#survey-tab" data-toggle="tab" class="model-select-button">{{= mailing_number }} - {{= mail_template }} ({{= mail_use }})</a>
    </td>
</script>
