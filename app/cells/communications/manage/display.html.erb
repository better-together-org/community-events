<%= render_cell "participants/participant_list", :javascript, 
    :caption => "comm-potential-recipients",
    :pager => "participants-pager",
    :place => "participants",
    :del => false,
    :edit => false,
    :add => false,
    :delayed => true,
    
    :pub_first_name => false,
    :pub_last_name => false,
    :pub_suffix => false,
    
    :multiselect => true,
    :showControls => false
%>

<%= render_cell "participants/participant_list", :javascript, 
    :caption => "comm-mailing-recipients",
    :pager => "mailing-people-pager",
    :place => "mailing-participants",
    :del => false,
    :edit => false,
    :add => false,
    :delayed => true,
    
    :invite_status => false,
    :invite_category => false,
    :acceptance_status => false,
    :has_survey => false,
    :reg_type => false,
    :pub_first_name => false,
