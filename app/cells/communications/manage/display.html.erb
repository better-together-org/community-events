%>

<div class="row">
    
    <div class="col-md-4">
        <%= render_cell "communications/mailing_list", :display %>
    </div>
    <div class="col-md-8">
        <h3 class="h3-underlined"><%= t 'mailing-details' %></h3>
        <div id="mailing-edit-area">
            <div class="empty-tab">
                <i class="fa fa-angle-left"></i>
                <i class= "fa fa-envelope fa-lg"></i>
                &nbsp;<%= t 'select-mailing-from-list' %>
            </div>
        </div>
        <div id="mailing-control-area"></div>
    </div>
</div>
<div id="mailing-area" class="row voffset10">
    <h3 class="h3-underlined"><%= t 'recipients' %><a class="mtooltip"><i class="glyphicon glyphicon-info-sign"></i><span><%= t 'hint-recipients' %></span></a></h3>
    <div class="col-xs-8">
      <div class="row">
        <div class="col-sm-8">
            <%= t "show-people-from-other-events" %><i class="glyphicon glyphicon-info-sign bpopover" data-placement="top auto" data-toggle="popover" title="" data-trigger="hover" data-content="<%= t "show-people-from-other-events-hint" %>" data-original-title="<%= t "show-people-from-other-events" %>"></i>
            <div class="input-group pull-right" id="people-filter">
                <input id="toggle-other-people" type="checkbox" data-size="mini" data-onstyle="success" checked>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8">
            <%= t "show-people-assigned-to-items" %><i class="glyphicon glyphicon-info-sign bpopover" data-placement="top auto" data-toggle="popover" title="" data-trigger="hover" data-content="<%= t "show-people-assigned-to-items-hint" %>" data-original-title="<%= t "show-people-assigned-to-items" %>"></i>
            <div class="input-group pull-right" id="people-filter">
                <input id="toggle-people" type="checkbox" data-size="mini" data-onstyle="success">
            </div>
        </div>
      </div>
      <div class="row voffset10">
        <div class="col-xs-12 left-jqgrid right-jqgrid">
          <%= render_cell "participants/participant_list", :display,
              :pager => "participants-pager",
              :place => "participants"
           %>
        </div>
      </div>
    </div>
    <div class="col-xs-1" style="padding-top: 50px;">
        <center>
       	    <div id="list-control-view"></div>
       	</center>
    </div>
    <div class="col-xs-3" style="padding-left: 0;">
        <div class='right-jqgrid'>
            <%= render_cell "participants/participant_list", :display,
                :pager => "mailing-people-pager",
                :place => "mailing-participants"
             %>
        </div>
        <div class="voffset10"></div>
        <div>
            <div id="preview-control-area"></div>
        </div>
	</div>
</div>
<div class="voffset20"></div>

