<div class='row'>
    <div class="col-md-4" style="float:none; margin: 0 auto;">
        <div class="well">
            <div id="login-form">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.label :email, class: "control-label" %>
                      <div>
                        <%= f.text_field :email, class: "form-control login-field", tabindex: "1", autofocus: "autofocus", autocorrect: "off", autocapitalize: "off" %>
                      </div>
                      <div class="voffset20">
                          <%= f.label :password, class: "control-label" %>
                          <div>
                            <%= f.password_field :password, class: "form-control login-field", tabindex: "2" %>
                          </div>
                      </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :remember_me, class: "control-label" %> <%= f.check_box :remember_me, tabindex: "3" %>
                    </div>
                    <div class="form-group">
                        <%= f.submit (t "proceed-to-login"), class: "btn btn-primary btn-lg", tabindex: "4" %>
                    </div>
                    <div class="voffset20" id="login-form-text-helpers">
                        <%= link_to (t "forgot-your-password"), new_password_path(resource_name) %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
