<% if @survey %>
    <% if !@survey.header_image.empty? %>
        <div class="row">
            <div class="col-md-12">
                <div><img src="<%= @survey.header_image if @survey.header_image %>"></div>
            </div>
        </div>
    <% end %>
<%end%>
<div class="row">
    <div class="col-md-12">
        <h1 class="grid_8 push_2"><%= @survey.name %></h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <% if @survey.declined_msg %>
            <%= @survey.declined_msg %>
        <% else %>
            Thank you. It has been noted that you have declined this invitation.
            If, at a later date, you decide to change your mind you can return to the survey using
            the information in your original invitation email.
        <% end %>
    </div>
</div>
