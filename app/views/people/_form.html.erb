<%= render "shared/error_messages", :target => @person %>
<%= form_for @person, :html => {:class => "layerform", :id => "layerform"} do |f| -%>
<div class='container_12'>
    <div class='grid_6'>
    	<div class='form-buttons'>
            <%= f.submit "submit" %>
            <button type="button" class='jqmClose'>
                Close
            </button>
        </div>
        <div class='line'>
            <div class='field_name'>
                <%= f.label :first_name, "First Name" %>
            </div>
            <div class='field_value'>
                <%= f.text_field :first_name %>
            </div>
        </div>
        <div class='line'>
            <div class='field_name'>
                <%= f.label :last_name, "Last Name" %>
            </div>
            <div class='field_value'>
                <%= f.text_field :last_name %>
            </div>
        </div>
        <div class='line'>
            <div class='field_name'>
                <%= f.label :suffix, "Suffix" %>
            </div>
            <div class='field_value'>
                <%= f.text_field :suffix %>
            </div>
        </div>
        <div class='line'>
            <div class='field_name'>
                <%= f.label :invitestatus_id %>
            </div>
            <div class='field_value'>
                <%= f.select :invitestatus_id,
                InviteStatus.all.to_a.collect {|s| [s.name,s.id] },
                {:include_blank => false} %>
            </div>
        </div>
        <div class='line'>
            <div class='field_name'>
                <%= f.label :invitation_category_id %>
            </div>
            <div class='field_value'>
                <%= f.select :invitation_category_id,
                InvitationCategory.all.to_a.collect {|s| [s.name,s.id] },
                {:include_blank => true} %>
            </div>
        </div>
        <div class='line'>
            <div class='field_name'>
                <%= f.label :acceptance_status_id %>
            </div>
            <div class='field_value'>
                <%= f.select :acceptance_status_id,
                AcceptanceStatus.all.to_a.collect {|s| [s.name,s.id] },
                {:include_blank =>false} %>
            </div>
        </div>
	</div>
	<div class='grid_6'>
        <% @person.build_pseudonym unless @person.pseudonym %>
        <% f.fields_for :pseudonym do |p| %>
        <div class='line'>
            <div class='field_name'>
                Pub Name First Name
            </div>
            <div class='field_value'>
                <%= p.text_field :first_name %>
            </div>
            <div class='line'>
                <div class='field_name'>
                    Pub Name Last Name
                </div>
                <div class='field_value'>
                    <%= p.text_field :last_name %>
                </div>
                <div class='line'>
                    <div class='field_name'>
                        Pub Name Suffix
                    </div>
                    <div class='field_value'>
                        <%= p.text_field :suffix %>
                    </div>
                </div>
            </div>
        </div>
        <%= p.hidden_field :lock_version %>
        <% end %>
		<div>
		  <div class='field_name'>Comments:</div>
	      <div class='field_value'><%= f.text_area :comments,:size => "40x10" %></div>
		</div>      
    </div>
</div>
<% end %>
<div id='form-response'>
</div>
