<script>
    var base_url = "<%= baseUri %>";
</script>

<% if @survey && !@survey.header_image.empty? %>
    <div class="row">
        <div class="col-sm-12">
            <img src="<%= @survey.header_image if @survey.header_image %>" class="survey-title-image"/>
        </div>
    </div>
<%end%>

<% if @errors %>
<div class="row">
    <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= get_error_messages(@errors).html_safe %>
    </div>
</div>
<% end %>

<% if @survey %>
    <%= form_tag @path, :method => :post, :class => "form-horizontal survey-form" do -%>
    <%= hidden_field_tag("key", @current_key) %>
    <div class="row">
        <div class="col-sm-12">
            <h2><%= @survey.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
        <fieldset>
            <div class="row">
                <div class="col-sm-12">
                <%= @survey.welcome.html_safe %>
                </div>
            </div>
            <!-- Get Biogragraphic info -->
            <% if !@survey.anonymous %>
                <div class="row">
                    <div class="col-sm-12">
                    <%=render :partial => 'respondent'%>
                    </div>
                </div>
            <% end %>
            <% @survey.survey_groups.each do |group| %>
                <div class="row">
                    <div class="col-sm-12">
                        <%=render :partial => 'group', :locals => {:group => group}%>
                    </div>
                </div>
            <% end %>
            <% if @survey.use_captcha && @captcha_config %>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row row-buffered">
                            <div class="col-sm-12 ">
                                <%= recaptcha_tags :public_key => @captcha_config.captcha_pub_key, :api_version => "v2" %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="row row-buffered">
                <div class="col-sm-12 ">
                    <button type="submit" class="btn btn-lg btn-primary" <%= 'disabled' if @preview %> ><%= @survey.submit_string %></button>
                </div>
            </div>
        </div>
    </div>
    <% end %>
<% else %>
    <div class="row">
        <div class="col-sm-12">
            <p>No Valid Survey</p>
            <%= @survey_id%>
        </div>
    </div>
<% end %>
